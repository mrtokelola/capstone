<div class="container">
  <h1>Login</h1>

  <%= form_tag "/login", method: :post do %>
  <div>
    Email: <br><input type="email" class="form-control" name="email" placeholder="Email" style="width: 100%">
  </div>
  <br>
  <div>
    Password: <br><input type="password" class="form-control" name="password" placeholder="Password" style="width: 100%">
  </div>
  <br>
  <input type="submit" value="Log In">
  <% end %>
</div>