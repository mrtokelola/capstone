  </div>
  <div class="col-md-4">
    <img src="/pill-bottle.png" style="width: 100%">
    <p class="bottle-text"><%= @prescription.dosage %></p>
  </div>
  <div class="col-md-4">
    <img src="/pill-bottle.png" style="width: 100%">
    <p class="bottle-text"><%= @prescription.product.side_effects %></p>
