<div class="container">
  
<h1>New prescription</h1>
<%= form_tag "/prescriptions", method: "post" do %>
  
  <div class="form-group">
    Amount: <br><input type="text" class="form-control" name="amount" placeholder="Amount" style="width: 100%">
  </div>
  <div>
    
    <br>
    Product: <br>
    <select name="product_id" style="width: 100%">
      <% @products.each do |product| %>
      <option value="<%= product.id %>"><%= product.name %></option>
      <% end %>
      </select>
  </div>
  <br>
  <div>
  Schedule: <br>
    <select name="schedule" style="width: 100%">
      <option value="1m">Every 1 minute</option>
      <option value="6h">Every 6 hours</option>
      <option value="12h">Every hour</option>
      <option value="1d">Every day</option>
      <option value="7d">Every week</option>
    </select>
  </div>

  <br>
  <div class="form-group">
    Dosage: <br><input type="text" class="form-control" name="dosage" placeholder="Dosage" style="width: 100%">
  </div>
 
  <br>
   <input type="submit" class="btn btn-default" value="Create prescription">
<% end %>
</div>