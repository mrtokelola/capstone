<div class="container">
  
<h1>Edit prescriptions</h1>
<h2 class="back">Product: <%= @prescription.product.name %></h2>
<div class="back"> <%= @prescription.product.description %> </div>
<%= form_tag "/prescriptions/#{@prescription.id}", method: :patch do %>
  <div class="form-group">
    <input type="hidden" class="form-control" value="<%= @prescription.user_id %>" name="title">
  </div>
  <div class="form-group">
    <input type="hidden" class="form-control" value="<%= @prescription.product_id %>" name="title">
  </div>
  <div class="form-group">
    Amount: <input type="text" class="form-control" value="<%= @prescription.amount %>" name="amount">
  </div>
  <input type="submit" class="btn btn-default" value="Update prescription">
<% end %>
</div>



<style type="text/css">
  .back {
    color: black;
  }
</style>